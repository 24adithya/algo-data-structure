{
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "plugins": [
        "prettier"
    ],
    "rules": {
        //   ... any eslint rules here
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "endOfLine": "auto",
                "tabWidth": 2
            }
        ]
    },
    "parserOptions": {
        "ecmaVersion": 2021 // Specify the ECMAScript version you are using (e.g., 2021 for ES12)
    }
}